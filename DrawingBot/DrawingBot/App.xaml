<Application x:Class="DrawingBot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DrawingBot"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Theme Colors -->
            <SolidColorBrush x:Key="BackgroundColor" Color="#090A0B"/>
            <SolidColorBrush x:Key="ContainerBackgroundColor" Color="#1A2028"/>
            <SolidColorBrush x:Key="AccentColor" Color="#2B3FF2"/>
            <SolidColorBrush x:Key="OutlineColor" Color="#9FAEC3"/>
            <SolidColorBrush x:Key="ForeColor" Color="#FFFFFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
